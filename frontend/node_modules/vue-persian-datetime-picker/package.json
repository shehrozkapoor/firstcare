{
  "name": "vue-persian-datetime-picker",
  "description": "A vue plugin to select jalali date and time",
  "version": "2.10.4",
  "private": false,
  "author": "Mohammad Talkhabi",
  "license": "MIT",
  "main": "dist/vue-persian-datetime-picker.common.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "shamsi datepicker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/talkhabi/vue-persian-datetime-picker"
  },
  "files": [
    "src",
    "dist/*.js",
    "index.d.ts"
  ],
  "scripts": {
    "serve": "vuepress dev docs",
    "build": "npm run export-common & npm run export-umd",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "docs.deploy.sh",
    "export-common": "vue-cli-service build --target lib --name VuePersianDatetimePicker --filename vue-persian-datetime-picker src/VuePersianDatetimePicker.vue --formats commonjs --no-clean",
    "export-umd": "vue-cli-service build --target lib --name VuePersianDatetimePicker --filename vue-persian-datetime-picker src/VuePersianDatetimePicker.vue --formats umd,umd-min --no-clean"
  },
  "dependencies": {
    "moment-jalaali": "^0.9.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.5.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "vue": "2.6.11",
    "vue-template-compiler": "2.6.11",
    "vue-server-renderer": "2.6.11",
    "vuepress": "^1.8.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/html-self-closing": [
        "warn",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "tabWidth": 2
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest"
  }
}
