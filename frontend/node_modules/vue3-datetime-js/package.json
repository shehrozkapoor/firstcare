{
  "name": "vue3-datetime-js",
  "description": "A Vue.js datepicker component",
  "version": "3.0.0",
  "author": "amroo",
  "license": "MIT",
  "main": "dist/vue-datetime-js.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "hijri",
    "islamic",
    "gregory",
    "gregory",
    "christian",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "hijri datepicker",
    "Umm al-Qura datepicker",
    "islamic calendar",
    "christian datepicker",
    "gregory datepicker"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "export": "cross-env NODE_ENV=export webpack --progress",
    "browser": "cross-env NODE_ENV=browser webpack --progress",
    "buildAll": "npm run build && npm run export && npm run browser",
    "buildNotBrowser": "npm run build && npm run export",
    "lint": "eslint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "moment-hijri": "^2.1.2",
    "moment-jalaali": "^0.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DigitalCloud/vue3-datetime-js.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^1.1.4",
    "highlight.js": "^9.12.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^6.0.6",
    "vue": "^3.2.31",
    "vue-loader": "^17.0.0",
    "vue-router": "^4.0.14",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
